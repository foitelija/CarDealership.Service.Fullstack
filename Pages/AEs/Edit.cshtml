@page
@model Web.CarDealership.BMW.Pages.AEs.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Изменить</h1>

<h4>Доп. оборудование</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AdditionalEquipment.ID" />
            <div class="form-group">
                <label asp-for="AdditionalEquipment.Name" class="control-label"></label>
                <input asp-for="AdditionalEquipment.Name" class="form-control" />
                <span asp-validation-for="AdditionalEquipment.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdditionalEquipment.Characteristics" class="control-label"></label>
                <input asp-for="AdditionalEquipment.Characteristics" class="form-control" />
                <span asp-validation-for="AdditionalEquipment.Characteristics" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdditionalEquipment.cost" class="control-label"></label>
                <input asp-for="AdditionalEquipment.cost" class="form-control" />
                <span asp-validation-for="AdditionalEquipment.cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Вернуться к таблице</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}